<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
  <extension point="org.eclipse.sirius.componentization">
    <component class="org.occiware.clouddesigner.occi.monitoring.ext.design.Activator"
               id="org.occiware.clouddesigner.occi.monitoring.ext.design"
	       name="monitoringext">
    </component>
  </extension>
   <!-- Popup menu for creating a monitoringext configuration file. -->
   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.occiware.clouddesigner.category.ID"
            name="Cloud Designer"/>
      <wizard
            category="org.occiware.clouddesigner.category.ID"
            class="org.occiware.clouddesigner.occi.monitoring.ext.design.wizard.NewConfigurationWizard"
            icon="platform:/plugin/org.occiware.clouddesigner.occi.edit/icons/full/obj16/Configuration.gif"
            id="org.occiware.clouddesigner.occi.monitoring.ext.design.wizard.NewConfigurationWizard"
            name="monitoringext Configuration File"/>
